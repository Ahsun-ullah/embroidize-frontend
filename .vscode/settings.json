{
  // Editor Settings for this workspace
  "editor.fontSize": 16,
  "editor.lineHeight": 24,
  "editor.insertSpaces": true,
  "editor.wordWrap": "on",
  "editor.renderWhitespace": "boundary",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "source.organizeImports": "always"
  },

  // File Settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.eol": "\n",
  "files.defaultLanguage": "javascript",
  "files.exclude": {
    "**/.git": true,
    "**/node_modules": true,
    "**/*.log": true
  },

  // Git Settings specific to this workspace
  "git.enableSmartCommit": true,
  "git.autorefresh": true,
  "git.autofetch": true,
  "git.confirmSync": false,

  // Terminal Settings
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 10000,

  // Language-Specific Configuration (e.g., for JavaScript/TypeScript)
  "javascript.validate.enable": true,
  "typescript.validate.enable": true,
  "typescript.format.enable": true,
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.autoFixOnSave": true,

  // Prettier Configuration for workspace
  "prettier.requireConfig": true,

  // IntelliSense & Code Suggestions for workspace
  "editor.quickSuggestions": {
    "strings": true,
    "other": true
  },
  "editor.suggestSelection": "first",
  "editor.snippetSuggestions": "top",
  "editor.tabCompletion": "on",

  // TypeScript and JavaScript Import Settings for workspace
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always"
}
